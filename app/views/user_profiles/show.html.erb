<div container="card user-profile">
    <div class="card-padder">
        <div class="card">
            
            <h2><%= @user_profile.first_name %> <%= @user_profile.last_name %>'s Profile</h2>
            
            <div class="profile-info">
                <h4>Personal Information</h2>
                <p>Email: <%= @user_profile.user.email %></p>
                <p>Birth Date: <%= @user_profile.birth_date.strftime("%B %d, %Y") %></p>
                <p>Location: <%= "#{@user_profile.location.lat}, #{@user_profile.location.lat}" %>></p>
                <div class="horizontal-divider"></div>
                <h4>Interests</h2>
                <% @user_profile.user.genres.each do |genre| %>
                    <p><%= genre.name %></p>
                <% end %>
            </div>
        </div>
    </div>
</div>