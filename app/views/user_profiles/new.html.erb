Profile information input

<%= form_for(@user_profile) do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    
    <%= f.label :birth_date %>
    <%= f.date_field :birth_date %>
    
    <%= f.fields_for :location do |f_location| %>
        
        <%= f_location.label :lat %>
        <%= f_location.text_field :lat %>
        
        <%= f_location.label :lng %>
        <%= f_location.text_field :lng %>
        
    <% end %>

    <%= f.submit "Update Profile" %>
<% end %>