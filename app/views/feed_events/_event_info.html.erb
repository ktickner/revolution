<section class="inset card" id="template">
    <div class="info-container">
        <div class="event-info">
            <div class="event-head">
                <div class="feature-image"></div>
                <div class="bg-overlay"></div>
                
                <div class="general-info">
                    <h2 class="event-name"></h2>
                    <p class="medium event-host">Hosted by <span class="highlight"></span></p>
                    <span class="over-eighteen medium"></span>
                </div>
            </div>
            
            <div class="event-body">
                <div class="info-inner">
                    <div class="info-left">
                        <p class="event-date"></p>
                        <p class="event-location"></p>
                    </div>
                    
                    <div class="info-right">
                        <p class="event-genres"></p>
                    </div>
                </div>
                
                <div class="rsvp">
    				<button>Attending</button>
    				<button>Interested</button>
    				<button>Not Going</button>
                </div>
                
                <div class="description">
                    <p></p>
                </div>
            </div>
        </div>
        
        <div class="event-comments">
            <div class="comment-input">
				<button>Write a Comment</button>
				<textarea id="comment"></textarea>
			</div>
			
			<div class="comment">
				<p>There are no comments about this event.</p>
			</div>
        </div>
    </div>
</section>